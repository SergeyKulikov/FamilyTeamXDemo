<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_16"
    tools:context="com.mycoloruniverse.familyteamx.view.TaskPropertiesActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_type_caption" />

    <Spinner
        android:id="@+id/sprTaskType"
        style="@style/MySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/list_preference_entries"
        android:orientation="vertical" />


    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task name" />


    <EditText
        android:id="@+id/etTaskName"
        style="@style/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="test" />


    <!--TextView
            android:id="@+id/tvCreatedTimeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_date_white_24dp"
            android:gravity="right|center_vertical"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:text="01.01.2018" /-->
    <TextView
        android:id="@+id/tvCreatedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created time" />

    <EditText
        android:id="@+id/etCreatedTimeDate"
        style="@style/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_date_white_24dp"

        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:text="01.01.2018" />


    <TextView
        android:id="@+id/tvCreatedTimeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_time_white_24dp"
        android:drawablePadding="8dp"
        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:text="00:00"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tvModifiedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modified time" />

    <EditText
        android:id="@+id/etModifiedTimeDate"
        style="@style/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_date_white_24dp"

        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:text="01.01.2018" />

    <TextView
        android:id="@+id/tvModifiedTimeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_time_white_24dp"
        android:drawablePadding="8dp"
        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:text="00:00"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status" />

    <Spinner
        android:id="@+id/sprStatus"
        style="@style/MySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- android:entries="@array/task_status_values" -->


    <TextView
        android:id="@+id/tvCloseTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close time" />

    <EditText
        android:id="@+id/etCloseTimeDate"
        style="@style/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_date_white_24dp"
        android:gravity="right|center_vertical"
        android:inputType="textPersonName"
        android:text="01.01.2018" />


    <TextView
        android:id="@+id/tvReceiptCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/receipt_currency" />

    <Spinner
        android:id="@+id/spReceiptCurrency"
        style="@style/MySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/multi_select_list_preference_default_value"
        android:gravity="right|center_vertical"
        android:text="USD" />


    <TextView
        android:id="@+id/tvRateCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="@string/rate_currency" />

    <EditText
        android:id="@+id/etRateCurrency"
        style="@style/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:gravity="right|center_vertical"
        android:inputType="numberDecimal"
        android:text="1" />


    <Switch
        android:id="@+id/swDivideSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Divide sum" />


    <TextView
        android:id="@+id/tvTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_star_border_black_24dp" />

        <ImageView
            android:id="@+id/ivTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_star_border_black_24dp" />

        <ImageView
            android:id="@+id/ivTeam3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_star_border_black_24dp" />

        <ImageView
            android:id="@+id/ivTeam4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_star_border_black_24dp" />

        <ImageView
            android:id="@+id/ivTeam5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_star_border_black_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTotalSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Total sum" />

    <EditText
        android:id="@+id/etTotalSum"
        style="@style/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:inputType="numberDecimal"
        android:text="0.00" />


</LinearLayout>
